# https://llvm.org/docs/HowToCrossCompileLLVM.html

target_host=arm-linux-gnueabihf
toolchain="/home/deploy/local/clang+llvm-11.1.0-x86_64-linux-gnu-ubuntu-16.04"
sysroot="/home/deploy/local/rootfs"

[settings]
os=Linux
os_build=Linux
arch=armv7hf
arch_build=x86_64
compiler=clang
compiler.cppstd=17
compiler.version=11
compiler.libcxx=libstdc++11
build_type=Release

[options]

[build_requires]

[env]
CHOST=$target_host
USE_DEV_URANDOM=1
CONAN_CMAKE_FIND_ROOT_PATH=$sysroot
PATH=[$toolchain/bin]
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
CC=clang
CXX=$target_host-$cxx_compiler
LD=$target_host-ld
STRIP=$target_host-strip
CFLAGS= -fPIE -fPIC -I$toolchain/include/c++/4.9.x -ccc-gcc-name armv7l-linux-gnueabihf-gcc -fuse-ld=lld
CXXFLAGS= -fPIE -fPIC -I$toolchain/include/c++/4.9.x -ccc-gcc-name armv7l-linux-gnueabihf-gcc -fuse-ld=lld
LDFLAGS= -pie



